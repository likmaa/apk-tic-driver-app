{
  "expo": {
    "name": "TIC Driver",
    "slug": "driver-app",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "ticdriver",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/LOGO_OR.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Nous avons besoin de votre position pour vous localiser sur la carte et suivre vos trajets.",
        "NSLocationAlwaysUsageDescription": "L'application a besoin de votre position en arrière-plan pour assurer le suivi de votre trajet en tant que chauffeur, même quand l'écran est éteint.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "L'application a besoin de votre position en arrière-plan pour assurer le suivi de votre trajet.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      },
      "bundleIdentifier": "com.ticmiton.driver"
    },
    "android": {
      "versionCode": 3,
      "package": "com.ticmiton.driver",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CALL_PHONE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#3650D0"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/LOGO_OR.png",
          "imageWidth": 150,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-location",
      "expo-font",
      "expo-web-browser",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxDownloadToken": "sk.eyJ1Ijoibm91dmVhdTU4IiwiYSI6ImNtajF3Z3BkeDBiNXAzZnNhc3djMDY0djIifQ.872kPcF77lZX4d3AZb9SDA"
        }
      ],
      "expo-notifications",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "extra": {
      "mapboxToken": "${EXPO_PUBLIC_MAPBOX_TOKEN}",
      "router": {},
      "eas": {
        "projectId": "596f8ecc-d83f-407a-91c2-6175f95b441c"
      }
    },
    "owner": "ticmiton"
  }
}