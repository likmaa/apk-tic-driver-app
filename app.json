{
  "expo": {
    "name": "driver-app",
    "slug": "driver-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "driverapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/LOGO_OR.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.porto.driver",
      "usesCleartextTraffic": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CALL_PHONE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/LOGO_OR.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-location",
      "expo-font",
      "expo-web-browser",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxDownloadToken": "sk.eyJ1Ijoibm91dmVhdTU4IiwiYSI6ImNtajF3Z3BkeDBiNXAzZnNhc3djMDY0djIifQ.872kPcF77lZX4d3AZb9SDA"
        }
      ]
    ],
    "extra": {
      "mapboxToken": "${EXPO_PUBLIC_MAPBOX_TOKEN}",
      "router": {},
      "eas": {
        "projectId": "596f8ecc-d83f-407a-91c2-6175f95b441c"
      }
    },
    "owner": "ticmiton"
  }
}